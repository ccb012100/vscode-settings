{
	"Date header": {
		"body": [
			"## ==> $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
			"",
			"$0"
		],
		"prefix": "dheader",
		"description": "Insert an H2 date header"
	},
	"Section separator": {
		"body": [
			"---",
			"",
			"$0"
		],
		"prefix": "section-separator",
		"description": "Insert a section separator"
	},
	"Checked checkbox": {
		"prefix": "checked-box",
		"description": "an unchecked checkbox",
		"body": [
			"- [x] $0",
		]
	},
	"Unchecked checkbox": {
		"prefix": "unchecked-box",
		"description": "an unchecked checkbox",
		"body": [
			"- [ ] $0",
		]
	},
	"Source url": {
		"prefix": "source-url",
		"description": "add source URL for notes",
		"body": [
			"_source_: <$0>",
			""
		]
	},
	"link": {
		"prefix": "link",
		"description": "formatted markdown link",
		"body": "[${2:display text}](${1:URL})"
	},
	"table": {
		"prefix": "table",
		"description": "new table template",
		"body": [
			"| $1 | $2 |",
			"| - | - |",
			"| $0 | |"
		]
	}
}